[
 {lager,
  [
   {crash_log, false},
   {handlers,
    [
     {lager_console_backend,
      [
       info,
       {lager_default_formatter, ["[",severity,"] ",message,"\n"]}
      ]}
    ]}
  ]},
 {syslog,
  [
   {no_progress, true},
   {app_name, "http2smtp"},
   {disable_tty, false},
   {syslog_error_logger, false}
  ]},
 "/etc/http2smtp.config"
].
